{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "ALTAI assessment radar chart for X-ray analysis AI",
    "width": 500,
    "height": 500,
    "padding": 135,
    "autosize": {"type": "none", "resize":true, "contains": "content"},
    "signals": [
        {"name": "radius", "update": "width / 2"}
    ],  
    "data": [
      {
        "name": "table",
        "values": [
          {"principle": "Human agency and oversight", "score": 3.25, "ais": 0},
          {"principle": "Technical robustness and safety", "score": 2.3333333333333335, "ais": 0},
          {"principle": "Privacy and Data governance", "score": 4, "ais": 0},
          {"principle": "Transparency", "score": 4, "ais": 0},
          {"principle": "Diversity, non-discrimination and fariness", "score": 2.3333333333333335, "ais": 0},
          {"principle": "Societal and environmental well-being", "score": 4, "ais": 0},
          {"principle": "Accountability", "score": 3.5, "ais": 0}
        ]
      },
      {
        "name": "principles",
        "source": "table",
        "transform": [
          {
            "type": "aggregate",
            "groupby": ["principle"]
          }
        ]
      }
    ],
  
    "scales": [
      {
        "name": "angular",
        "type": "point",
        "range": {"signal": "[-PI, PI]"},
        "domain": {"data": "table", "field": "principle"}
      },
      {
        "name": "radial",
        "type": "linear",
        "range": {"signal": "[0, radius]"},
        "domain": [0, 5], 
        "nice": false
      },
      {
        "name": "color",
        "type": "ordinal",
        "domain": {"data": "table", "field": "ais"},
        "range": {"scheme": "viridis"}
      }
    ],
    "encode": {
      "enter": {
        "x": {"signal": "radius"},
        "y": {"signal": "radius"}
      }
    },
  
    "marks": [
      {
        "type": "group",
        "name": "categories",
        "zindex": 1,
        "from": {
          "facet": {"data": "table", "name": "facet", "groupby": ["ais"]}
        },
        "marks": [
          {
            "type": "line",
            "name": "principle-line",
            "from": {"data": "facet"},
            "encode": {
              "enter": {
                "interpolate": {"value": "linear-closed"},
                "x": {"signal": "scale('radial', datum.score) * cos(scale('angular', datum.principle))"},
                "y": {"signal": "scale('radial', datum.score) * sin(scale('angular', datum.principle))"},
                "stroke": {"value": "steelblue"},
                "strokeWidth": {"value": 2},
                "fill": {"value": "lightsteelblue"}
              }
            }
          },
        {
        "type": "text",
        "name": "score-text",
        "from": {"data": "principle-line"},
            "encode": {
              "enter": {
                "x": {"signal": "datum.x"},
                "y": {"signal": "datum.y"},
                "text": {"signal": "datum.datum.score"},
                "align": {"value": "right"},
                "baseline": {"value": "middle"},
                "fill": {"value": "black"}
              }
            }
          }
        ]
    },
      {
        "type": "rule",
        "name": "radial-grid",
        "from": {"data": "principles"},
        "zindex": 0,
        "encode": {
          "enter": {
            "x": {"value": 0},
            "y": {"value": 0},
            "x2": {"signal": "radius * cos(scale('angular', datum.principle))"},
            "y2": {"signal": "radius * sin(scale('angular', datum.principle))"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      },
      {
        "type": "text",
        "name": "principle-label",
        "from": {"data": "principles"},
        "zindex": 1,
        "encode": {
          "enter": {
            "x": {"signal": "(radius + 5) * cos(scale('angular', datum.principle))"},
            "y": {"signal": "(radius + 5) * sin(scale('angular', datum.principle))"},
            "text": {"field": "principle"},
            "align": [
              {
                "test": "abs(scale('angular', datum.principle)) > PI / 2",
                "value": "right"
              },
              {
                "value": "left"
              }
            ],
            "baseline": [
              {
                "test": "scale('angular', datum.principle) > 0", "value": "top"
              },
              {
                "test": "scale('angular', datum.principle) == 0", "value": "middle"
              },
              {
                "value": "bottom"
              }
            ],
            "fontWeight": {"value": "bold"}
          }
        }
      },
      {
        "type": "line",
        "name": "outer-line",
        "from": {"data": "radial-grid"},
        "encode": {
          "enter": {
            "interpolate": {"value": "linear-closed"},
            "x": {"field": "x2"},
            "y": {"field": "y2"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      },
    {
      "type": "group",
      "encode": {
        "enter": {
          "x": {"signal": "width / 2"},
          "y": {"signal": "height / 2"}
        }
      },
      "marks": [
        {
          "type": "symbol",
          "from": {"data": "values"},
          "encode": {
            "enter": {
              "shape": {"value": "hexagon"},
              "fill": {"value": "none"},
              "stroke": {"value": "gray"},
              "strokeWidth": {"value": 1},
              "size": {"value": 0}
            },
            "update": {
              "x": {"value": 0},
              "y": {"value": 0},
              "angle": {"scale": "angular", "field": "category"},
              "radius": {"scale": "radial", "field": "value"}
            }
          }
        }
      ]
    }
    ]
  }
  